@model IEnumerable<CarRental.Models.Car>

@{
    ViewBag.Title = "Index";
}

<h2>All Cars</h2>


<table  class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CarCategory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarMake)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarModel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DaysOfRental)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsHired)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CarCategory)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CarMake)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CarModel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DaysOfRental)
        </td>
        <td>
            @Html.Raw((item.IsHired) ? "No" : "Yes") <!-- displays Yes/No instead of check box -->
            @*@Html.DisplayFor(modelItem => item.IsHired)*@
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", "Cars", new { id=item.CarRegNo }, null) |
            @Html.ActionLink("Details", "Details", "Cars", new { id=item.CarRegNo }, null) |
            @Html.ActionLink("Delete", "Delete", "Cars", new { id=item.CarRegNo }, null)
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Add car", "Create", "Cars")
</p>
<P>
    @Html.ActionLink("Back to Home", "Index", "Home")
</P>