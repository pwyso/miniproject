@model IEnumerable<CarRental.Models.Customer>

@{
    ViewBag.Title = "AllCustomers";
}

<h2>List of customers</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustFirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustLastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustEmail)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CustFirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustLastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustEmail)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", "Customers", new { id=item.CustPhone }, null) |
            @Html.ActionLink("Details", "Details", "Customers", new { id=item.CustPhone }, null) |
            @Html.ActionLink("Delete", "Delete", "Customers", new { id=item.CustPhone }, null)
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Add customer", "Create", "Customers")
</p>
<P>
    @Html.ActionLink("Back to Home", "Index", "Home")
</P>